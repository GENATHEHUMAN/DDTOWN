<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="kr.or.ddit.ddtown.mapper.community.ICommunityFollowMapper">
 
 	<insert id="insertFollow" parameterType="kr.or.ddit.vo.community.CommunityProfileVO">
 		INSERT INTO follow (
		    mem_username
		    , art_group_no
		    , follow_date
		) VALUES (
		    #{memUsername}
		  , #{artGroupNo}
		  , sysdate
		)
 	</insert>
 	
 	<delete id="deleteFollow" parameterType="kr.or.ddit.vo.community.CommunityProfileVO">
 		DELETE FROM follow
		WHERE
	        mem_username = #{memUsername}
	    AND art_group_no = #{artGroupNo}
 	</delete>
 </mapper>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="${pageContext.request.contextPath}/resources/css/pages/admin_portal.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript" src="${pageContext.request.contextPath}/resources/ckeditorInquiry/ckeditor.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>

</head>
<script type="text/javascript">

$(function(){
	
	const currentUrl = location.href;
    const sliceUrl = currentUrl.split("/");
    const faqNo = sliceUrl[sliceUrl.length -1];
	
	$.ajax({
		url : "/admin/faq/detailData/" + faqNo, 
		type : "get",
		success : function(res){
			console.log(res);
			let html = ``;
			if(res != null && res != ""){
				html = `
					<div class="faq-category-tag" id="faqDescription">\${res.description}</div>
					<h3 class="question" id="faqTitle">\${res.faqTitle}</h3>
					<div class="answer-content" id="faqDetailAnswer">
					\${res.faqAnswer}
					</div>
					<div class="action-buttons-bottom">
						<a href="admin_cs_faq_form.html?id=3&mode=edit" class="ea-btn outline" id="editFaqDetailBtn"><i class="fas fa-edit"></i> 수정</a>
	                    <button class="ea-btn danger" onclick="deleteFaqDetail(3)" id="deleteFaqDetailBtn"><i class="fas fa-trash-alt"></i> 삭제</button>
	                    <a href="admin_cs_faq_list.html" class="ea-btn primary"><i class="fas fa-list"></i> 목록</a>
					</div>
				`;
			}
			$("#faq").html(html);
		},
		error : function(error, status, thrown){
			console.log(error.status);
		}
		
	});
	
});

</script>
<body>

faq상세페이지

<main class="emp-content">
	<section id="csFaqDetailSection" class="ea-section active-section">
		<div class="ea-section-header">
			<h2>FAQ 상세 보기</h2>
		</div>
		
		<div class="faq-detail-view" id="faq">
		
		</div>
	</section>
</main>
</body>
</html>
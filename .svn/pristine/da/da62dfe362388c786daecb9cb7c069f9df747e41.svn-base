-->
<!-- alert_type_code 가져오기 -->
<select id="getATCs" resultType="string">
	SELECT
	    comm_code_det_no
	FROM
	    common_detail_code
	WHERE
	    comm_code_grp_no = 'ALERT_TYPE_CODE'
</select>

 <insert id="insertSetting" parameterType="kr.or.ddit.vo.AlertSettingVO" >
 	INSERT INTO alert_setting (
	    alert_type_code
	    , mem_username
	) VALUES (
	    #{alertTypeCode}
	  , #{memUsername}
	)
 </insert>
 
 </mapper>
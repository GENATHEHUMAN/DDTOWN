/* artist_detail_A_specific.css - Artist A 상세 페이지 전용 스타일 */

/* 프로필 배너 이미지 */
.artist-profile-image-large {
    width: 100%;
    height: 500px;
    border-radius: 8px 8px 0 0;
    overflow: hidden;
    position: relative;
    background: none;
}
.artist-profile-image-large img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.35s cubic-bezier(0.22, 1, 0.36, 1);
    display: block;
}
.artist-profile-image-large:hover img {
    transform: scale(1.08);
}

/* 앨범 리스트 스타일 */
.album-list {
    display: flex;
    flex-direction: column;
    gap: 30px;
}

.album-item {
    display: flex;
    gap: 20px;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.album-cover {
    flex-shrink: 0;
}

.album-cover img {
    width: 150px;
    height: 150px;
    border-radius: 4px;
    object-fit: cover;
}

.album-details {
    flex-grow: 1;
}

.album-title {
    font-size: 1.4em;
    color: #333;
    margin-bottom: 10px;
}

.album-release-date {
    color: #666;
    margin-bottom: 10px;
}

.album-description {
    color: #555;
    line-height: 1.6;
    margin-bottom: 15px;
}

.track-list {
    padding-left: 20px;
    color: #444;
}

.track-list li {
    margin-bottom: 5px;
}

/* 탭 콘텐츠 초기 상태 */
#album-content {
    display: none;
}

/* 탭 콘텐츠 초기 상태 (JavaScript로 제어되므로, 기본 숨김 상태를 CSS로 정의) */

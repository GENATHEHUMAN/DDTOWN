    display: none;
}
.tab-content.active {  /* JavaScript에서 .active 클래스를 추가하여 표시 */
/* display: block;
}
*/

/* 만약 #media-content 만 초기에 숨기고 싶다면 (HTML의 인라인 스타일과 동일하게) */
#media-content {
    display: none;
}

/* (추가) 만약 다른 요소에 인라인 스타일이 있었다면 여기에 해당 규칙을 추가합니다. */
/* 예시: */
/* .some-other-element-specific-to-this-page { */
/* color: blue; */
/* } */

.artist-profile-info {
    margin-bottom: 32px;
    padding: 18px 0 0 0;
}
.artist-meta {
    margin-top: 12px;
    padding-left: 0;
    list-style: none;
    color: #444;
    font-size: 1em;
}
.artist-meta li {
    margin-bottom: 4px;
}
.artist-recent-feed {
    margin-top: 12px;
    padding-left: 0;
    list-style: none;
    border-radius: 8px;
    background: #fafbfc;
    border: 1px solid #eee;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
}
.artist-recent-feed li {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 18px;
    border-bottom: 1px solid #f0f0f0;
    font-size: 1em;
}
.artist-recent-feed li:last-child {
    border-bottom: none;
}
.feed-type {
    color: #8a2be2;
    font-weight: bold;
    margin-right: 4px;
}
.feed-title {
    flex: 1;
    color: #222;
}
.feed-date {
    color: #888;
    font-size: 0.95em;
    margin-left: 8px;
}

/* 앨범 트랙 테이블 */
.track-list-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
    background: #fafbfc;
    border-radius: 8px;
    overflow: hidden;
    font-size: 1em;
}
.track-list-table th, .track-list-table td {
    padding: 8px 12px;
    text-align: left;
}
.track-list-table th {
    background: #f0f0f0;
    color: #8a2be2;
    font-weight: 700;
    border-bottom: 1px solid #e0e0e0;
}
.track-list-table tr:not(:last-child) td {
    border-bottom: 1px solid #f0f0f0;
}
.track-title-badge {
    display: inline-block;
    background: #8a2be2;
    color: #fff;
    font-size: 0.92em;
    font-weight: 600;
    border-radius: 8px;
    padding: 2px 10px;
    margin-left: 2px;
}